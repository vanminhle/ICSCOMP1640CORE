@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
  <link rel="stylesheet" href="~/css/Login/Login.css" />
<section class="form-login" style="box-sizing: content-box !important; padding: 15px 20px 15px 20px !important;">
	<form id="account" method="post">
		<div class="title">
			<img class="img-avatar" src="~/img/avatar.svg" height="80px" width="80px" style="align-self: center;">
			<h2>Login</h2>
		</div>

		<div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: center;"></div>
		<div class="form-floating" >
			<label>Email</label>
			<input asp-for="Input.Email" placeholder="Email" class="form-control" autocomplete="username" aria-required="true" style="box-sizing: content-box !important; height: 15px;" />
			<span asp-validation-for="Input.Email" class="text-danger" style="font-size: 13px; padding-top: 5px;"></span>
		</div>
		<div class="form-floating">
			<label>Password</label>
			<input asp-for="Input.Password" placeholder="Password" class="form-control" autocomplete="current-password" aria-required="true" style="box-sizing: content-box !important; height: 15px;" />
			<span asp-validation-for="Input.Password" class="text-danger" style="font-size: 13px; padding-top: 5px;"></span>
		</div>
		<div class="Login"style="box-sizing: content-box !important;">

			<button id="login-submit" type="submit" class="button-Login" style="box-sizing: content-box !important;">Login</button>
		</div>
		<div class="remember-password">
			<div class="checkbox">
				<label asp-for="Input.RememberMe" class="form-label">
					<input class="form-check-input" asp-for="Input.RememberMe" />
					@Html.DisplayNameFor(m => m.Input.RememberMe)
				</label>
			</div>
		</div>
		<div class="manage">
			<p>
				<a style="text-decoration: none;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
			</p>
			@*<p>
				<a class="link-manage" asp-page="./ResetPassword" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
			</p>*@
			<p>
			<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
			</p>
		</div>
	</form>
</section>

