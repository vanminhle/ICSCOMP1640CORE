@model ICSCOMP1640CORE.Models.Idea

<div style="text-align:center;">
    <h1>@Model.IdeaName</h1>
    <div>
        <p>Author: @Model.User.FullName</p>
        <p>Submit at @Model.SubmitDate</p>
    </div>
    <div class="row" style="margin-left:auto; margin-right:auto">
        <a class="btn btn-info btn-outline-warning col-4">DOCUMENT - CLICK TO DOWNLOAD</a>
        <p class="col-6"></p>
    </div>
    <div class="card text-white bg-secondary mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Content</h5>
            <p class="card-text"></p>
        </div>
    </div>
    </div>
		<div class="element">
			@if (@Model.Document == null){
				<p>THIS IDEA DOES NOT HAVE DOCUMENT</p>
			} else {
				@Html.ActionLink("Download Document", "DownloadDocumentIdea","Staffs", new{id = @Model.Id}, htmlAttributes:null)
			}
	</div>
    <div class="card text-white bg-secondary mb-3">
        <div class="card-body">
            <p class="card-text">Comment</p>
        </div>
    </div>
</div>

<a class="btn btn-info btn-outline-warning col-3 fas fa-reply" asp-controller="Admins" asp-action="ManageIdeas"> Back to previous pageD</a>
