@model ICSCOMP1640CORE.Models.Department;

@{
    ViewBag.Title = "Create Department";
}

<h1 class="mt-5 mb-4">Create Department</h1>

<form asp-controller="Admins" asp-action="CreateDepartment" method="post">
    <div class="mw-100 mb-5">
		<div class="form-row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group col-md-6">
                <label>Department Name</label>
                @Html.TextBoxFor(t => t.Name, "", new { @class = "form-control" , required= "required" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
			</div>

			<div class="form-group col-md-6">
			<label>Description</label>
			@Html.TextBoxFor(t => t.Description, "", new { @class = "form-control" , required= "required" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
			</div>
		</div>

        <div class="mt-4">
        <button type="submit" class="btn btn-outline-success">Create</button>
		<a class="btn btn-outline-primary" asp-controller="Admins" asp-action="DepartmentsIndex">Cancel</a>
        </div>
    </div>

