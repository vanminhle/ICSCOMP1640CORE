@model IEnumerable<ICSCOMP1640CORE.Models.Department>
@{
    ViewData["Department List"] = "";

}
<head>
  <link rel="stylesheet" href="~/css/DepartmentIndex/DepartmentIndex.css">
</head>
<h2>Departments</h2>
    @using (Html.BeginForm("DepartmentIndex","Admins",FormMethod.Get)){
        <div class="form-group" style = "gap:10px; display: flex; width: 40%;">
        @Html.TextBox("searchString" ,null, new { @class = "form-control" , @placeholder = "Find By Name" })
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Department Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.DepartmentId</th>
                <td>@item.DepartmentName</td>
                <td>@item.Description</td>
                <td>
                    @Html.ActionLink("Delete", "DeleteDepartment", "Admins", new { id = item.DepartmentId }, new { @class = "btn btn-outline-danger" })
                    @Html.ActionLink("Edit", "EditDepartment", "Admins", new { id = item.DepartmentId }, new { @class = "btn btn-outline-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
<center><a class="nav-link btn btn-outline-primary col-4" asp-controller="Admins" asp-action="CreateDepartment">Create A new Department</a></center>