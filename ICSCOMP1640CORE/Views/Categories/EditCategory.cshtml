@model ICSCOMP1640CORE.Models.Category

@{
	ViewData["Title"] = "Edit Category";
}

<h1 class="mt-5 mb-4">Edit Category</h1>
<form asp-controller="Categories" asp-action="EditCategory" method="post">
	@Html.HiddenFor(i => i.CategoryId)
    <div class="mw-100 mb-5">
		<div class="form-group">
			<label>Category Name</label>
			<input type="text" class="form-control  col-md-4" placeholder="Nguyen Van A" asp-for="CategoryName" >
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>

		<div class="form-group">
             <label>Description</label>
			<input type="text" class="form-control  col-md-4" placeholder="" asp-for="Description" >
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-outline-success">Edit</button>
		<a class="btn btn-outline-primary" asp-controller="Categories" asp-action="Index">Cancel</a>
	</div>
