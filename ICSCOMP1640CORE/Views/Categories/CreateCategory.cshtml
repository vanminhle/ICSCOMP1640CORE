@model ICSCOMP1640CORE.Models.Category
@*@Html.ValidationMessage("ExistCategory")*@
<h1 style="text-align: center">Create Category</h1>

<form asp-controller="Categories" asp-action="CreateCategory" method="post">
    <div class="form-group">
        <label>Name of category</label>
        <input type="text" class="form-control col-md-4" placeholder="Input name" asp-for="CategoryName">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control col-md-4" placeholder="Input description" asp-for="Description">
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
    <center><a class="btn btn-outline-primary col-3 fas fa-reply" asp-controller="Categories" asp-action="Index">   Back</a></center>
</form>