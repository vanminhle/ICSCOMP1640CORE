@model ICSCOMP1640CORE.Models.User

@{
	ViewData["Title"] = "Edit Profile";
}

<h1 class="mt-5 mb-4">Edit Profile</h1>

@if (TempData["Danger"] != null)
{
		<div class="alert alert-danger alert-dismissable">
			<strong>@TempData["Danger"]</strong>
		</div>
}
<form asp-controller="Managers" asp-action="EditProfile" method="post">
	@Html.HiddenFor(i => i.Id)
	<div class="mw-100 mb-5">
		<div class="form-row">
				<div class="form-group col-md-9">
					<label>Full Name</label>
					<input type="text" class="form-control" placeholder="Nguyen Van A" asp-for="FullName" required>
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>

				<div class="form-group col-md-3">
				<label>Gender</label>
				@Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Gender))),"Select Gender",
				new { @class = "form-control", required= "required"})
				</div>
			</div>
		@*<div class="form-row">
			<div class="form-group col-md-6">
				<label>Email</label>
				<input type="email" class="form-control" placeholder="mail@example.com" asp-for="Email" required>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label>Password</label>
				<input type="password" class="form-control" placeholder="Password" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" asp-for="PasswordHash" id="myInput" required>
				<span asp-validation-for="PasswordHash" class="text-danger"></span>
			</div>
		</div>*@

		<div class="form-row">
			<div class="form-group col-md-6">
				<label>Address</label>
				<input type="text" class="form-control" placeholder="Address" asp-for="Address" required>
			</div>
			<div class="form-group col-md-4">
				<label>Phone number</label>
				<input type="tel" class="form-control" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" title="Phone number must be 10 numbers" placeholder="09XXXXXXXX" asp-for="PhoneNumber" required>
			</div>
			<div class="form-group col-md-2">
				<label>Age</label>
				<input type="number" min=23 max=60 class="form-control" placeholder="Age" asp-for="Age" required>
			</div>
		</div>
		<div class="mt-4">
			<button type="submit" class="btn btn-outline-success">Edit</button>
			<a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Manage/Index">Cancel</a>
		</div>
	</div>
</form>
