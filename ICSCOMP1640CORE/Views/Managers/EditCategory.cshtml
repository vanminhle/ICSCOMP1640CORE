@model ICSCOMP1640CORE.Models.Category
@Html.ValidationMessage("ExistCategory")

<h1 style="text-align: center">Edit Category</h1>
<form asp-controller="Managers" asp-action="EditCategory" method="post">
	@Html.HiddenFor(i => i.Id)
	<div class="form-group">
		<label>Name of category</label>
		<input type="text" class="form-control" placeholder="Input name" asp-for="Name">
	</div>
	<div class="form-group">
		<label>Description</label>
		<input type="text" class="form-control" placeholder="Description input" asp-for="Description">
	</div>
	<button type="submit" class="btn btn-outline-success">Edit</button>
	<center><a class="btn btn-outline-primary col-3 fas fa-reply" asp-controller="Managers" asp-action="ManageCategories">   Back</a></center>

</form>